update_fastlane

default_platform(:ios)

platform :ios do
  lane :flutter do |options|
    build_number = options[:build_number]
    build_name = options[:build_name]

    Dir.chdir "../.." do
      sh("flutter", "clean")
      sh("flutter", "packages", "get")
    end

    cocoapods

    Dir.chdir "../.." do
      sh("flutter", "build", "ios", "--release", "--no-codesign", "--no-tree-shake-icons", "--build-name=#{build_name}", "--build-number=#{build_number}")
    end
  end

  lane :beta do |options|
    if options[:build] || options[:build_number] || options[:build_name]
      flutter(build_number: options[:build_number], build_name: options[:build_name])
      
    end
    build_app(workspace: "Runner.xcworkspace", scheme: "Runner")
    beta_upload(options)
  end

  lane :beta_upload do |options|
    build_number = options[:build_number]
    build_name = options[:build_name]

    upload_to_testflight
    slack(
      message: "Se ha subido correctamente la versiÃ³n #{build_name} (#{build_number}) a TestFlight (iOS)",
      slack_url: ENV["SLACK_URL"],
      default_payloads: ["git_branch", "git_author", "last_git_commit", "last_git_commit_hash"],
      attachment_properties: {
        fields: [
          {
            title: "Track",
            value: "TestFlight"
          },
          {
            title: "Build name",
            value: build_name
          },
          {
            title: "Build number",
            value: build_number
          }
        ]
      },
      use_webhook_configured_username_and_icon: true
    )
  end

  lane :appstore_upload do |options|
    if options[:build] || options[:build_number] || options[:build_name]
      flutter(build_number: options[:build_number], build_name: options[:build_name])
      build_app(workspace: "Runner.xcworkspace", scheme: "Runner")
    end
    
    upload_to_app_store(
      submit_for_review: true,
      automatic_release: true,
      force: true,
      skip_metadata: true,
      skip_screenshots: true,
      skip_binary_upload: true
    )

    notificate(
      track: options[:track],
      build_name: build_name,
      build_number: build_number,
    )
  end

  lane :notificate  do |options|
    build_number = options[:build_number]
    build_name = options[:build_name]
    
    track = "beta"
    if options[:track]
      track = options[:track]
    end

    slack(
      message: "ðŸš€ Se ha lanzado correctamente la versiÃ³n #{build_name} (#{build_number}) en Android",
      slack_url: ENV["SLACK_URL"],
      default_payloads: ["git_branch", "git_author", "last_git_commit", "last_git_commit_hash"],
      attachment_properties: {
        fields: [
          {
            title: "Track",
            value: track
          },
          {
            title: "Build name",
            value: build_name
          },
          {
            title: "Build number",
            value: build_number
          }
        ]
      },
      use_webhook_configured_username_and_icon: true
    )
  end
end